<Window x:Class="Lab1MathMod.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Похибка обчислення" Height="400" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <DataGrid x:Name="ErrorGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Час (t)" Binding="{Binding Time, StringFormat=F4}" Width="*"/>

                <DataGridTextColumn Header="Аналітичне (x)" Binding="{Binding Analytical, StringFormat=F4}" Width="*"/>

                <DataGridTextColumn Header="Чисельне (x)" Binding="{Binding Numerical, StringFormat=F4}" Width="*"/>

                <DataGridTextColumn Header="Абсолютна пох." Binding="{Binding AbsError, StringFormat=E4}" Width="*"/>

                <DataGridTextColumn Header="Відносна пох." Binding="{Binding RelError, StringFormat=E4}" Width="*"/>

                <DataGridTextColumn Header="Відносна %" Binding="{Binding RelErrorPercent, StringFormat=F4}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>