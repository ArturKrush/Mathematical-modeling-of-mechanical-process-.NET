<UserControl x:Class="Lab1MathMod.NumericInputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lab1MathMod"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical" Margin="5">
        <TextBlock x:Name="LabelText" Text="Label"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="ValueTextBox" Grid.Column="0" VerticalContentAlignment="Center" KeyDown="ValueTextBox_KeyDown" LostFocus="ValueTextBox_LostFocus"/>
            <StackPanel Grid.Column="1" Orientation="Vertical">
                <!-- Використовуємо RepeatButton для утримання кнопки -->
                <RepeatButton x:Name="UpButton" Content="▲" Width="20" FontSize="8" Click="UpButton_Click" Delay="500" Interval="100"/>
                <RepeatButton x:Name="DownButton" Content="▼" Width="20" FontSize="8" Click="DownButton_Click" Delay="500" Interval="100"/>
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>